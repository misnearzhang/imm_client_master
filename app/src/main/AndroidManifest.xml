<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syuct.zhanglong.message4u" >
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name=".MainActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SuperActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".login_activity"
            android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity
            android:name=".IndexActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".register_activity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:launchMode="singleInstance">
        </activity>
        <service android:name="com.syuct.zhanglong.service.testService">
            <intent-filter>
                <action android:name="com.syuct.zhanglong.service" />
                <category android:name="android.intent.category.default" />
            </intent-filter>
        </service>
    </application>

</manifest>
